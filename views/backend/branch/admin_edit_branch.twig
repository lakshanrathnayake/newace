{% extends 'super_admin.twig' %}

{% block styles %}

{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Branch</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="row">
            <div class="col-sm-8">
                <form class="form-horizontal" id="form" method="post" name="form" onsubmit="return false"
                      autocomplete="off">
                    {% for result in results %}
                        <div class="box-body col-sm-12">
                            <div class="form-group">

                                <div class="col-sm-9">
                                    <input type="hidden" name="id" value={{ result.id }}/>

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Full Name</label>

                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id=" branchName" name="branchName" placeholder="Name"
                                           value={{ result.branchName }}  required>
                                </div>

                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Address</label>


                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="address" name="address" placeholder="Address"
                                           value="{{ result.address }}" required>
                                </div>

                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">Telephone</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="telephone" name="telephone"
                                           placeholder="Telephone" value={{ result.telephone }} required>
                                </div>
                            </div>


                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">Branch</label>
                                <div class="col-sm-9">
                                    <select id="typeId" name="typeId" list="branchList"
                                            class="form-control select2 select2-hidden-accessible" required>
                                        {% for type in branchtypes%}
                                            <option value="{{ type.id }}">{{ type.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>


                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">Privilege</label>

                                <div class="col-sm-9">
                                    <select class="form-control" id="statusId" name="statusId" required>
                                        {% for status in branchstatus%}
                                            <option value="{{ status.id }}">{{ status.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-sm-offset-10 col-sm-2">
                                    <button style="width: 100%" type="submit" id="update" class="btn btn-info pull-right">Update</button>
                                </div>
                            </div>
                        </div>
                      
                      
                        <!-- /.box-footer -->
                    {% endfor %}
                </form>
            </div>
            <div class="col-sm-4">
                <img src={{ images.branch }} class="img img-responsive" style="opacity: 0.6"/>
            </div>
        </div>

    </div>

{% endblock %}
    {% block onloadJS %}
        <script type="text/javascript">

            var url = '{{ getURL('post.branch.update') }}';

        </script>

        <script type="text/javascript" src="../js/bootbox.min.js"></script>
        <script type="text/javascript" src="../controller/backend/branch/edit_branch_controller.js"></script>
    {% endblock %}